{
  "name": "BBetterTTV",
  "description": "BlackBoard BetterTTV",
  "version": "1.1.1",

  "manifest_version": 2,

  "content_scripts": [
    {
      "js": [
        "twitch.js"
      ],
      "matches": [
        "*://*.bbcollab.com/*"
      ]
    }
  ],
  "page_action": {
    "default_icon": {
      "48": "icons/icon.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "data/emotes.json"
  ],
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://raw.githubusercontent.com/FelixRandle/BBetterTTV/master/updates.json"
    }
  }
}
